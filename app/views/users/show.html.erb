<h5>Logged in as: <%= @user.name %></h5>
<% if @user.pets != [] %>
  <h5>You have <%= @user.pets.size %> registered pet, <%= @user.pets.first.name %>. </h5>
<% else %>
  <h5>You have no registered pets.</h5>
<% end %>
<div class="row" >
  <div class="col-md-6 col-md-offset-3">
    <%= link_to new_user_pet_path(session[:user_id]), class: "btn btn-default" do %><i class="glyphicon glyphicon-plus"></i>
    <% end %>

    <%= link_to timer_path, class: "btn btn-default" do %><i class="glyphicon glyphicon-time" ></i>
    <% end %>

    <%= link_to root_path, class: "btn btn-default" do %><i class="glyphicon glyphicon-home"></i>
    <% end %>
  </div>
</div>

